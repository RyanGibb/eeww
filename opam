license:      "BSD2"

build: [
  ["./configure" "--prefix" prefix]
  [make]
]
install: [make "install"]
remove: ["ocamlfind" "remove" "hkdf"]
build-test: [
  [ "./configure" "--%{alcotest:enable}%-tests" ]
  [ make "test" ]
]

depends: [
  "ocamlfind"
  "cstruct" {>= "1.6.0"}
  "nocrypto" {>= "0.5.0"}
  "alcotest" {test}
]
available: [ ocaml-version >= "4.01.0" ]
