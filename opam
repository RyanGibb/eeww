opam-version: "1.2"
name:         "hkdf"
homepage:     "https://github.com/hannesm/ocaml-hkdf"
dev-repo:     "https://github.com/hannesm/ocaml-hkdf.git"
bug-reports:  "https://github.com/hannesm/ocaml-hkdf/issues"
author:       ["Hannes Mehnert <hannes@mehnert.org>"]
