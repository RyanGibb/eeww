(lang dune 3.3)
(name kcas)
(generate_opam_files true)
(source (github ocaml-multicore/kcas))
(authors "KC Sivaramakrishnan <sk826@cl.cam.ac.uk>")
(maintainers "KC Sivaramakrishnan <sk826@cl.cam.ac.uk>")
(homepage "https://github.com/ocaml-multicore/kcas")
(license "ISC")
(package (name kcas)
 (synopsis "Multi-word compare-and-set library")
 (depends 
  (ocaml (>= 5.0))))
(package (name kcas_data)
 (synopsis "Compositional lock-free data structures")
 (depends
  (kcas (= :version))))
(package (name kcas_test)
 (synopsis "Test suite for the kcas packages")
 (depends
  (kcas (= :version))
  (kcas_data (= :version))
  (mdx (and (>= 1.10.0) :with-test))))
(using mdx 0.2)
